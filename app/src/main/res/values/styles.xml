<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="textColorPrimary">@color/textColorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

    <style name="AppTheme.MarsTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Mars</item>
        <item name="colorPrimaryVariant">@color/Mars</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/Mars</item>
        <item name="colorOnBackground">color_red</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="AppTheme.MoonTheme">
        <item name="colorPrimaryDark">@color/moon_dark</item>
        <item name="colorAccent">@color/moon_light</item>
        <item name="themeColorPrimary">@color/moon</item>
        <item name="android:colorBackground">@color/moon_bg</item>
        <item name="colorPrimary">@color/moon_primary</item>
        <item name="colorPrimaryVariant">@color/moon_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/moon_second</item>
        <item name="colorSecondaryVariant">@color/moon_second_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/color_white</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="rippleColor">@color/color_green_light</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/color_gray</item>
    </style>

    <style name="Header">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="LinearLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Description">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
